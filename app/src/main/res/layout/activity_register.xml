<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jp.android.imaizumiriko.clothesdivide.RegisterActivity">


    <ImageView
        android:id="@+id/image_view_tops"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:adjustViewBounds="true"
        android:background="@drawable/m_e_others_500"
        android:onClick="pickImageTops"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/image_view_buttoms"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:adjustViewBounds="true"
        android:background="@drawable/m_e_others_500"
        android:onClick="pickImageBottoms"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/edittext_title"
            android:inputType="text"
            android:textSize="12sp"
            android:hint="ここに登録するセット名を入力してください。"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="right"
            android:background="@drawable/button_background"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="完成"
            android:onClick="register"/>

    </LinearLayout>


</LinearLayout>
