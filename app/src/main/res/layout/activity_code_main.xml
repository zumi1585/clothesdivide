<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jp.android.imaizumiriko.clothesdivide.CodeMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="moveToCodeitiran"
            android:text="コーデ一覧"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="moveToTouroku"
            android:text="Button" />

    </LinearLayout>


    <ImageView
        android:id="@+id/fashion_head"
        android:layout_width="394dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Button" />

    <ImageView
        android:id="@+id/fashion_tops"
        android:layout_width="394dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Button" />

    <ImageView
        android:id="@+id/fashion_pants"
        android:layout_width="387dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Button" />

    <ImageView
        android:id="@+id/fashion_shoes"
        android:layout_width="383dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Button" />

</LinearLayout>
